[apply]
	whitespace = nowarn

[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[merge]
	tool = fugitive

[alias]
	st = status .
	ci = commit
	co = checkout
	br = branch
	lola = log --graph --decorate --pretty=format:\"%C(auto)%h %C(green)%cd%Creset %C(auto)%d %s %C(cyan)[%cn]\" --date=short --abbrev-commit --all
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
